<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kmong.kmongdemo.mapper.UserMapper">
    <select id="userList" resultType="com.kmong.kmongdemo.domain.UserDTO">
        SELECT * FROM user
    </select>

    <insert id="userInsert" parameterType="UserDTO">
        INSERT INTO user(userId, userPassword, userName,
        userNickname, userEmail, userTel, userJobId, userRegdate)
        VALUES( #{userId},
        #{userPassword},
        #{userName},
        #{userNickname},
        #{userEmail},
        #{userTel},
        #{userJobId},
        #{userRegdate}
        )
    </insert>

    <select id="idCheck" resultType="userDTO">
        SELECT * FROM user WHERE userId=#{userId}
    </select>

    <select id="pwCheck" resultType="userDTO">
        SELECT * FROM user WHERE userPassword= #{userPassword}
    </select>


</mapper>